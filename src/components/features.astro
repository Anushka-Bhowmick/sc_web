---
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";
import  NextCard from "~/components/feature-card.tsx";

const features: Array<FeatureItem> = [
  {
    title: 'Suman Bhattacharya',
    description:"CSBS HOD",
    image: "/src/content/teachers/SNBSir.jpeg",
  },
  {
    title: "Dr. Nayan Ranjan Das",
    description:"Faculty Advisor",
      image: "/src/content/teachers/NRDSir.jpeg",
  },
  {
    title: "Suman Goswami",
    description:"Co-Advisor and Financial Associate.",
      image: "/src/content/teachers/SGSir.jpeg",
  }
];
---


  <ContentSection title="Teachers" id="features" >
  <Fragment slot="lead">
    Astro comes <span class="text-primary">batteries included</span>. It takes
    the best parts of
    <span class="text-primary">state-of-the-art</span>
    tools and adds its own <span class="text-primary">innovations</span>.
  </Fragment>


    <ul class="grid max-w-6xl max-h-6xl grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-3 ">
      {
        features.map(({ title, description, image }) => (
          <NextCard 
            client:visible
            title={title}
            description={description}
            image={image}
           />
        ))
      }
    </ul>
</ContentSection>